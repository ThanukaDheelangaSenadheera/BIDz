<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BidZ.lk</title>

    @* Template files,here css files*@
    <link href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/css(1)" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/bootstrap.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/animate.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/jquery-ui.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/simple-line-icons.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/font-awesome.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/icon-font.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/auction.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/BidZLayoutFolder/")index_files/settings.css">

    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>


</head>
<body>
    <header class="site-header">
        <div id="main-header" class="main-header header-sticky">
            <div class="inner-header container clearfix">
                <div class="logo">
                    <a href=""><img src="@Url.Content("~/Content/BidZLayoutFolder")/index_files/logo.png" alt=""></a>
                </div>
                <div class="header-right-toggle pull-right hidden-md hidden-lg">
                    <a href="javascript:void(0)" class="side-menu-button"><i class="fa fa-bars"></i></a>
                </div>
                <nav class="main-navigation text-left hidden-xs hidden-sm">
                    <ul>
                        <li><a href="~/Home/Index">Home</a></li>
                        @if (Session["Email"] == null)
                        {
                        <li><a href="~/Account/Login">Login</a></li>
                        <li><a href="~/Account/RegisterType">Register</a></li>
                        }
                        else
                        {
                         <li>@Html.RouteLink("SignOut", new { action = "LogOff", controller = "Account"})</li>
                         <li>@Html.RouteLink("Create Auction", new { action = "Create", controller = "Auctions" })</li>
                        }
                        
                        <li>
                            <a href="" class="has-submenu">Blog<i class="fa fa-angle-down"></i></a>
                            <ul class="sub-menu">
                                <li><a href="">Classic</a></li>
                                <li><a href="">Grids System</a></li>
                                <li><a href="">Grids Sidebar</a></li>
                                <li><a href="">Single Post</a></li>
                            </ul>
                        </li>
                                             
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    
    <div>
        @RenderBody()
    </div>

    <div id="sub-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <p>Copyrights 2017 <em>BidZ.LK</em>. Developed by Thanuka,Kavishka and Thula</p>
                </div>
                    <div class="col-md-6 col-sm-12">                   
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @section scripts
    {
    <!-- jQuery -->
    <script src="./functionSearch_files/jquery-1.11.2.min.js.download"></script>
    <!-- Bootstrap -->
    <script src="./functionSearch_files/bootstrap.min.js.download"></script>
    <!-- Inview -->
    <script src="./functionSearch_files/jquery.inview.min.js.download"></script>
    <!-- google maps -->
    <script src="./functionSearch_files/js"></script>
    <!-- Tweetie -->
    <script src="./functionSearch_files/tweetie.min.js.download"></script>
    <!-- FlexSlider -->
    <script src="./functionSearch_files/jquery.flexslider-min.js.download"></script>
    <!-- Owl Carousel -->
    <script src="./functionSearch_files/owl.carousel.min.js.download"></script>
    <!-- Isotope -->
    <script src="./functionSearch_files/isotope.pkgd.min.js.download"></script>

    <script src="./functionSearch_files/imagesloaded.pkgd.min.js.download"></script>
    <!-- noUiSlider -->
    <script src="./functionSearch_files/jquery.nouislider.all.min.js.download"></script>
    <!-- Scripts.js -->
    <script src="./functionSearch_files/scripts.js.download"></script>
   
    }




</body>
</html>
